[
  {
    "bindings": {
      "ctrl-p": "file_finder::Toggle",
      "ctrl-b": "file_finder::Toggle",
      "ctrl-enter": "editor::AcceptEditPrediction",
      "cmd-,": "zed::OpenKeymap",
      "f12": "workspace::ToggleRightDock"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "cmd-t": "workspace::NewTerminal"
    }
  },
  {
    "context": "GitPanel && ChangesList",
    "bindings": {
      "s": "git::ToggleStaged",
      "c c": "git::Commit",
      "space t": "workspace::ToggleLeftDock",
      "x": ["git::RestoreFile", { "skip_prompt": false }]
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "r": "project_panel::Rename",
      "x": "project_panel::Cut",
      "y": "project_panel::Copy",
      "p": "project_panel::Paste",
      "d": "project_panel::Delete",
      "a": "project_panel::NewFile",
      "space t": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "shift-k": "editor::Hover",
      "g d": "editor::GoToDefinition",
      "g I": "editor::GoToImplementation",
      "g r": "editor::FindAllReferences",
      "g s": "git_panel::FocusChanges",
      "space r n": "editor::Rename",
      "space t": "workspace::ToggleLeftDock",
      "space f f": [
        "task::Spawn",
        { "task_name": "live_grep", "reveal_target": "center" }
      ]
    }
  }
]
